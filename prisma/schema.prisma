generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  wallet      String   @id
  discordId   String?
  discordName String?
  twitters    String[]
  servers     Server[]
}

enum Subscription {
  CHAIN
  STRIPE
  UNDEFINED
}

model Server {
  id                     Int          @id @default(autoincrement())
  owner                  User?        @relation(fields: [ownerWallet], references: [wallet])
  ownerWallet            String?
  connectedDiscordServer String?
  subscription           Subscription
}
