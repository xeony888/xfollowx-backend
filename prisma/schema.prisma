generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  discordId   String  @id
  discordName String
  twitter     String?
  servers     Guild[]
  days        Int     @default(0)
  following   User[]  @relation("Follow")
  followedBy  User[]  @relation("Follow")
}

model Guild {
  guildId       String  @id
  guildName     String
  User          User?   @relation(fields: [userDiscordId], references: [discordId])
  userDiscordId String?
}

model Missed {
  id     String @id @default(uuid())
  user   String
  amount Int
}
